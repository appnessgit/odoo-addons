<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="bus_stock_warehouse_form_view" model="ir.ui.view">
            <field name="name">Bus warehouse form view</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="target_base_id" required="1"/>
                </field>
            </field>
        </record>

        <record id="bus_stock_location_route_form_view" model="ir.ui.view">
            <field name="name">Bus routes form view</field>
            <field name="model">stock.location.route</field>
            <field name="inherit_id" ref="stock.stock_location_route_form_view"/>
            <field name="arch" type="xml">
                <separator position="before">
                    <group>
                        <group>
                            <field name="site_id" attrs="{'required': [('is_child_route', '=', True)]}"/>
                            <field name="is_child_route"/>
                        </group>
                    </group>
                </separator>
            </field>
        </record>

    </data>
</openerp>