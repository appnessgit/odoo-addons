<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="l10n_fr_state_department_partner">
            <field name="name">l10n_fr_state_department_partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <search position="inside">
                    <field name="department_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                    <filter name="state_groupby" string="State/Region" context="{'group_by': 'state_id'}"/>
                </search>
            </field>
        </record>

    </data>
</openerp>