<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="res_partner_partner_form">
            <field name="name">res_partner_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Informations connecteur" attrs="{'invisible': [('customer', '=', False)]}">
                        <group>
                            <field name="customer_point"/>
                        </group>
                        <group string="Informations mapping">
                            <field name="custom_field_mapping" context="{'default_partner_id': id}" nolabel="1"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="res_partner_custom_field_tree">
            <field name="name">res_partner_custom_field_tree</field>
            <field name="model">res.partner.custom.field</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="field"/>
                    <field name="field_mapping"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>