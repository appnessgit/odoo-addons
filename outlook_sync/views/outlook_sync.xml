<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- OUTLOOK.CONTACT.SYNC -->

    <record id="outlook_sync_wizard_form" model="ir.ui.view">
        <field name="name">outlook_sync_wizard_form</field>
        <field name="model">outlook.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="Synchronisation avec Outlook">
                <group>
                    <group>
                        <field name="synchronise_contacts"/>
                        <field name="synchronise_events"/>
                        <div colspan="2"/>
                        <button name="get_auth_code_outlook"
                                string="Authentification"
                                type="object"
                                class="btn-primary"/>
                    </group>
                </group>
                <footer>
                    <button name="button_do_get_from_outlook"
                            string="Importer depuis Outlook"
                            type="object"
                            class="btn-primary"/>
                    <button name="button_do_send_to_outlook"
                            string="Exporter vers Outlook"
                            type="object"
                            class="btn-primary"/>
                    <button special="cancel" string="Annuler" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="outlook_sync_wizard_action" model="ir.actions.act_window">
        <field name="name">Synchronisation Outlook</field>
        <field name="res_model">outlook.sync.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- MENU RES.PARTNER -->
    <menuitem id="outlook_sync_wizard_menu_res_partner"
              name="Synchronisation Outlook"
              action="outlook_sync_wizard_action"
              parent="contacts.menu_contacts"
              sequence="4"/>

    <!-- MENU CALENDAR.EVENTS-->
    <menuitem id="outlook_sync_wizard_menu_calendar_event"
              name="Synchronisation Outlook"
              action="outlook_sync_wizard_action"
              parent="calendar.mail_menu_calendar"
              sequence="1"/>

    <!--EMAIL TEMPLATE-->

    <record id="email_template_refresh_outlook_authentication" model="mail.template">
        <field name="name">Synchronisation Outlook</field>
        <field name="email_from">Administrator</field>
        <field name="subject">Rafraîchissement connexion Odoo-Outlook</field>
        <field name="partner_to">${object.partner_id.id}</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="auto_delete" eval="True"/>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="body_html"><![CDATA[
<div summary="o_mail_template" style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
% set colors = {'needsAction': 'grey', 'accepted': 'green', 'tentative': '#FFFF00',  'declined': 'red'}
    <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
        <tbody><tr>
            <td valign="center" width="200" style="padding:10px 10px 10px 5px;font-size: 12px">
                <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${user.company_id.name}">
            </td>
        </tr></tbody>
    </table>
    <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
        <tbody><tr>
            <td valign="top" style="width:600px; padding:10px 10px 10px 5px;">
                <div>
                    <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0;margin:15px auto;padding:0">
                </div>
            </td>
        </tr></tbody>
    </table>
</div>
<div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
    <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
        <tbody><tr>
            <td style="padding:10px 10px 10px 5px;font-size: 14px;">
                <p style="font-size: 20px; text-align: center;">Synchronisation Outlook</p>

                <p>
                    <strong>
                        ${object.partner_id.title.name or ''}
                        ${object.partner_id.first_name or ''}
                        ${object.partner_id.last_name}
                    <strong>
                </p>
                <br />
                <p>
                    Merci de rafraîchir votre authentification Odoo-Outlook pour permettre la synchronisation des informations.
                </p>

            </td>
        </tr></tbody>
    </table>
</div>
]]></field>
    </record>

    <!--RES.CONFIG.SETTINGS-->

    <record id="outlook_sync_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">outlook_sync_res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='module_auth_oauth']" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" id="outlook_authentication">
                    <div class="o_setting_right_pane">
                        <div class="text-muted">Get your IDs in your Azure App.</div>
                        <div class="content-group">
                            <div class="mt16 row">
                                <label for="client_id_outlook" class="col-xs-3 col-md-3 o_light_label"/>
                                <field name="client_id_outlook" class="oe_inline"/>
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt16 row">
                                <label for="client_secret_outlook" class="col-xs-3 col-md-3 o_light_label"/>
                                <field name="client_secret_outlook" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>