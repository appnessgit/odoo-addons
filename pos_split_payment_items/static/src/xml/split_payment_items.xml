<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <t t-extend="LoadOrderLine">
         <t t-jquery=".order-line" t-operation="prepend">
             <td><t t-esc="order.table_name"/></td>
         </t>
     </t>
    <t t-extend="OrderListScreenWidget">
         <t t-jquery=".order-list tr" t-operation="prepend">
            <th>Table</th>
         </t>
     </t>
     <t t-extend="SplitbillScreenWidget">
         <t t-jquery=".left-content" t-operation="append">
             <div class="control-buttons">
                <input type="number" name="line_split_number" id="line_split_number" min="2" value="2"/>
                <button name="split_line" class="control-button split_line">Split Payment lines</button>
                 <p class="txt-warning">
                     <i>Warning, all selected items will be split. And you will return on the previous screen.</i>
                 </p>
             </div>
         </t>
     </t>
</templates>
