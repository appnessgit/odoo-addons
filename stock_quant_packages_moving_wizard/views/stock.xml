<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="moving_warehouse_production_form">
            <field name="name">moving_warehouse_production_form</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='in_type_id']/.." position="after">
                	<group>
                    	<field name="picking_type_id"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_product_line_search">
            <field name="name">stock_product_line_search</field>
            <field name="model">stock.product.line</field>
            <field name="arch" type="xml">
                <search string="Search Product">
                    <field string="product+package" name="product_id" filter_domain="['|','|',('product_id.default_code','ilike',self),('package_id','ilike',self),('product_id','ilike',self)]"/>
                    <field name="product_id"/>
                    <field name="package_id"/>
                    <field name="lot_id" groups="stock.group_production_lot"/>
                    <field name="uom_id" groups="product.group_uom"/>
                    <field name="location_id"/>
                    <separator/>
                    <filter string="Top package" domain="[('product_id', '=', False)]"/>
                    <filter string="Bulk items" domain="[('package_id', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_product_line_tree_view">
            <field name="name">stock_product_line_tree_view</field>
            <field name="model">stock.product.line</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree create="false" delete="false">
                    <field name="product_id" widget="many2one_clickable"/>
                    <field name="package_id" widget="many2one_clickable"/>
                    <field name="lot_id" groups="stock.group_production_lot"/>
                    <field name="qty"/>
                    <field name="uom_id" groups="product.group_uom"/>
                    <field name="location_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.server" id="ir_actions_server_move_products">
            <field name="name">Move products</field>
            <field name="model_id" ref="stock_quant_packages_moving_wizard.model_stock_product_line"/>
            <field name="code">
action = self.move_products(cr, uid, context.get('active_ids'), False, context)
            </field>
        </record>

        <record model="ir.values" id="ir_value_move_products">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">stock.product.line</field>
            <field name="name">Move products</field>
            <field name="value" eval="'ir.actions.server,'+str(ir_actions_server_move_products)"/>
        </record>

        <record model="ir.actions.server" id="ir_actions_server_move_to_package">
            <field name="name">Move to package</field>
            <field name="model_id" ref="stock_quant_packages_moving_wizard.model_stock_product_line"/>
            <field name="code">
action = self.move_products_to_package(cr, uid, context.get('active_ids'), False, context)
            </field>
        </record>

        <record model="ir.values" id="ir_value_move_products_to_package">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">stock.product.line</field>
            <field name="name">Move to package</field>
            <field name="value" eval="'ir.actions.server,'+str(ir_actions_server_move_to_package)"/>
        </record>

        <record model="ir.actions.server" id="ir_actions_server_execute_packops">
            <field name="name">Execute packops for packages</field>
            <field name="model_id" ref="stock_quant_packages_moving_wizard.model_stock_product_line"/>
            <field name="code">
action = self.execute_packops(cr, uid, context.get('active_ids'), False, context)
            </field>
        </record>

        <record model="ir.values" id="ir_value_move_products_execute_packops">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">stock.product.line</field>
            <field name="name">Execute packops for packages</field>
            <field name="value" eval="'ir.actions.server,'+str(ir_actions_server_execute_packops)"/>
        </record>

        <record model="ir.ui.view" id="moving_wizard_stock_picking_form">
            <field name="name">moving_wizard_stock_picking_form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <button name="action_cancel" position="after">
                    <button name="create_package_for_picking" states="assigned" string="Create a new destination package" type="object" class="oe_highlight"/>
                </button>
                <xpath expr="//field[@name='pack_operation_product_ids']/tree//field[@name='result_package_id']" position="attributes">
                	<attribute name="invisible">0</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>