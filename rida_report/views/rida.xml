<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- views -->

    <record model="ir.ui.view" id="rida_line_tree">
        <field name="name">rida.line.tree</field>
        <field name="model">rida.line</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="type"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="report_id"/>
                <field name="date"/>
                <field name="state" widget="kanban_state_selection"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="rida_report_tree">
        <field name="name">rida.report.tree</field>
        <field name="model">rida.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="creation_date"/>
                <field name="project_id"/>
                <field name="theme_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="rida_report_form">
        <field name="name">rida.report.form</field>
        <field name="model">rida.report</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Name"/>
                    </h1>
                </div>
                <group>
                    <group colspan="2">
                        <field name="theme_id"/>
                        <field name="project_id"/>
                    </group>
                </group>
                <group string="Lines" col="1">
                    <field name="line_ids" nolabel="1">
                        <tree editable="top">
                            <field name="type"/>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="date"/>
                            <field name="state" widget="kanban_state_selection"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <!-- actions -->

    <record model="ir.actions.act_window" id="rida_line_action">
        <field name="name">Lines</field>
        <field name="res_model">rida.line</field>
        <field name="view_mode">tree</field>
    </record>

    <record model="ir.actions.act_window" id="rida_report_action">
        <field name="name">RIDA</field>
        <field name="res_model">rida.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- menuitems -->

    <menuitem
            name="RIDA"
            id="rida_root_menu"/>

    <menuitem
            name="RIDA"
            id="rida_menu"
            parent="rida_root_menu"/>

    <menuitem
            name="Lines"
            id="rida_line_menu"
            action="rida_line_action"
            parent="rida_menu"/>

    <menuitem
            name="RIDA"
            id="rida_report_menu"
            action="rida_report_action"
            parent="rida_menu"/>
</odoo>