<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="allergens_product_template_form">
            <field name="name">allergens_product_template_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page name="allergens" string="Allergens">
                        <field name="allergen_ids" widget="many2many_checkboxes"/>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="restaurant_allergen_tree">
            <field name="name">restaurant_allergen_tree</field>
            <field name="model">restaurant.allergen</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_restaurant_allergen">
            <field name="name">Allergens</field>
            <field name="res_model">restaurant.allergen</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help"></field>
        </record>

        <menuitem id="menu_restaurant_allergen" name="Allergens" action="act_window_restaurant_allergen"
                  parent="stock.menu_stock_config_settings" sequence="200"/>

    </data>
</openerp>