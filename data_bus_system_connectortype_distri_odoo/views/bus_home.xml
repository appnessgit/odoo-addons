<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_type_distri_odoo_parameter_form" model="ir.ui.view">
            <field name="name">connector.type.distri.odoo.parameter.form</field>
            <field name="model">connector.type.distri.odoo.parameter</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="url" colspan="2" required="1"/>
                            <field name="login" colspan="2" required="1"/>
                            <field name="pwd" colspan="2" required="1"/>
                            <field name="port" colspan="2" required="1"/>
                            <field name="db" colspan="2" required="1"/>
                            <field name="model_name" colspan="2" required="1"/>
                            <field name="method_name" colspan="2" required="1"/>
                        </group>
                        <group col="4">
                            <button name="test_connexion" type="object" string="Test Connexion"/>
                            <div class="text-left" invisible="context.get('connexion_state',False) != True">
                                Connexion réussie
                            </div>
                            <div class="text-left" invisible="context.get('connexion_state',True) == True">
                                Connexion échouée
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>