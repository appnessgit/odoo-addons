<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_home_backend_form" model="ir.ui.view">
            <field name="name">home.backend.form</field>
            <field name="model">backend.home</field>
            <field name="arch" type="xml">
                <form string="Home Backend">
                    <header>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group name="home" string="Parameters">
                            <field name="partner_id"/>
                            <field name="comment"/>
                            <field name="warehouse_id"/>
                            <field name="type_ids">
                                <tree editable="bottom">
                                    <field name="image" options="{'size':[128,128]}" widget="image" readonly="1"/>
                                    <field name="name"/>
                                    <field name="type_id" widget="many2one_clickable"/>
                                    <button string="DÃ©tails" name="open_popup_parameter" type="object"
                                            context="{'line_id':id}"/>
                                </tree>
                            </field>
                        </group>
                        <group name="connector_configuration" string="Connector Parameters">
                            <notebook>
                                <page string="Connector Pull Data" name="pull">
                                    <field name="connector_pull_ids">
                                        <tree editable="bottom">
                                            <field name="image" options="{'size':[128,128]}" widget="image"
                                                   readonly="1"/>
                                            <field name="connector_id" options="{'create':false,'create_edit':false}"
                                                   widget="many2one_clickable" domain="[('type','=','PULL')]"/>
                                            <field name="line_id" attrs="{'readonly':[('connector_id','=',False)]}"/>
                                            <field name="type" invisible="1"/>
                                            <field name="init_conf" invisible="1"/>
                                            <field name="cron" readonly="1"/>
                                            <button string="Init" name="create_backend" type="object"
                                                    attrs="{'invisible':[('init_conf','=',True)]}"/>
                                            <button string="Edit cron" name="edit_cron" type="object"
                                                    attrs="{'invisible':[('init_conf','=',False)]}"/>
                                            <button string="run" name="run_batch" type="object"
                                                    attrs="{'invisible':[('init_conf','=',False)]}"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Connector Push Data" name="push">
                                    <field name="connector_push_ids">
                                        <tree editable="bottom">
                                            <field name="image" options="{'size':[128,128]}" widget="image"
                                                   readonly="1"/>
                                            <field name="connector_id" options="{'create':false,'create_edit':false}"
                                                   widget="many2one_clickable" domain="[('type','=','PUSH')]"/>
                                            <field name="line_id" attrs="{'readonly':[('connector_id','=',False)]}"/>
                                            <field name="type" invisible="1"/>
                                            <field name="init_conf" invisible="1"/>
                                            <field name="cron" readonly="1"/>
                                            <button string="Init" name="create_backend" type="object"
                                                    attrs="{'invisible':[('init_conf','=',True)]}"/>
                                            <button string="Edit cron" name="edit_cron" type="object"
                                                    attrs="{'invisible':[('init_conf','=',False)]}"/>
                                            <button string="run" name="run_batch" type="object"
                                                    attrs="{'invisible':[('init_conf','=',False)]}"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_home_backend_tree" model="ir.ui.view">
            <field name="name">home.backend.tree</field>
            <field name="model">backend.home</field>
            <field name="arch" type="xml">
                <tree string="Home Backend">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_home_backend" model="ir.actions.act_window">
            <field name="name">Home Backends</field>
            <field name="res_model">backend.home</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_home_backend_tree"/>
        </record>

        <menuitem id="menu_home_backend_root"
                  parent="connector.menu_connector_root"
                  name="Backend Connector"
                  sequence="10"
                  groups="connector.group_connector_manager"/>

        <menuitem id="menu_home_backend"
                  name="Backend Home"
                  parent="menu_home_backend_root"
                  action="action_home_backend"/>

        <record id="view_type_magento_parameter_form" model="ir.ui.view">
            <field name="name">connector.type.magento.parameter.form</field>
            <field name="model">connector.type.magento.parameter</field>
            <field name="arch" type="xml">
                <form>
                    <notebook>
                        <page string="API" name="api">
                            <group colspan="4" col="4">
                                <field name="url" placeholder="e.g. http://my.magento.com" colspan="4"/>
                                <field name="api_user" colspan="2"/>
                                <field name="api_pwd" password="1" colspan="2"/>
                            </group>
                        </page>
                        <page string="HTTP Authentication" name="auth" colspan="4" col="4">
                            <group colspan="4" col="4">
                                <field name="use_http" colspan="4"/>
                                <field name="http_user" colspan="2"
                                       attrs="{'invisible': [('use_http', '=', False)], 'required': [('use_http', '=', True)]}"/>
                                <field name="http_pwd" colspan="2" password="1"
                                       attrs="{'invisible': [('use_http', '=', False)], 'required': [('use_http', '=', True)]}"/>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button name="write" string="Sauver" type="object" class="oe_highlight"/>
                        or
                        <button string="Annuler" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_type_ftp_parameter_form" model="ir.ui.view">
            <field name="name">connector.type.ftp.parameter.form</field>
            <field name="model">connector.type.ftp.parameter</field>
            <field name="arch" type="xml">
                <form>
                    <group colspan="4" col="4">
                        <field name="protocol" colspan="2"/>
                        <field name="url" placeholder="e.g. http://my.magento.com" colspan="2"/>
                        <field name="user" colspan="2"/>
                        <field name="pwd" password="1" colspan="2"/>
                    </group>
                    <footer>
                        <button name="write" string="Sauver" type="object" class="oe_highlight"/>
                        or
                        <button string="Annuler" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_type_local_parameter_form" model="ir.ui.view">
            <field name="name">connector.type.local.parameter.form</field>
            <field name="model">connector.type.local.parameter</field>
            <field name="arch" type="xml">
                <form>
                    <group colspan="4" col="4">
                        <field name="url" placeholder="e.g. /opt/folder" colspan="4"/>
                    </group>
                    <footer>
                        <button name="write" string="Sauver" type="object" class="oe_highlight"/>
                        or
                        <button string="Annuler" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>