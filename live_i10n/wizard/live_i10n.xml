<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="live_i18n_ir_translation_form">
            <field name="name">live.i10n.ir.translation.form</field>
            <field name="model">live.i10n.ir.translation</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <field name="line_tranlate_ids">
                            <tree editable="top" create="false" delete="false">
                                <field name="line_id" invisible="1"/>
                                <field name="lang"/>
                                <field name="lang_value"/>
                            </tree>
                    </field>
                    <footer>
                        <button name="apply_change" string="_Apply" type="object" class="oe_highlight"/>
                        or
                        <button string="_Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>