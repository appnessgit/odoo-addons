<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <record id="group_pos_viewer" model="res.groups">
            <field name="name">Point of Sale Viewer</field>
            <field name="category_id" ref="base.module_category_point_of_sale"/>
        </record>

        <record id="point_of_sale.group_pos_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_pos_viewer'))]"/>
        </record>

        <!-- Add access on top-level Accounting menu -->
        <record id="point_of_sale.menu_point_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('group_pos_viewer'))]"/>
        </record>

        <record id="point_of_sale.menu_point_ofsale" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('group_pos_viewer'))]"/>
        </record>

    </data>
</openerp>
