<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="ir_attachment_search">
            <field name="name">ir_attachment_search</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="base.view_attachment_search"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <search position="inside">
                    <separator/>
                    <filter name="protected_attachment" string="Protected Attachments" domain="[('protected_attachment', '=', True)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.server" id="action_check_hash_integrity_protected_attachments">
        <field name="name">Protected Files Inalterability Check</field>
        <field name="model_id" ref="base.model_ir_attachment"/>
        <field name="type">ir.actions.server</field>
        <field name="code">
action = env['ir.attachment']._check_hash_integrity(env.user.company_id.id)
        </field>
    </record>

    <menuitem action="action_check_hash_integrity_protected_attachments"
              id="menu_check_protected_attachments_integrity" name="Protected Files Inalterability Check"
              parent="l10n_fr.account_reports_fr_statements_menu" sequence="95"/>

    </data>
</openerp>