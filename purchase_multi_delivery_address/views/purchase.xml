<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="purchase_order_form_multi_address">
            <field name="name">purchase.order.form.multi.address</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//field[@name='order_line']/tree" position="inside">
                    <field name="partner_dest_id"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="purchase_order_line_tree_multi_address">
            <field name="name">purchase.order.line.tree.multi.address</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree position="inside">
                    <field name="partner_dest_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="purchase_order_line_form_multi_address">
            <field name="name">purchase.order.line.form.multi.address</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form2"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="partner_dest_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>