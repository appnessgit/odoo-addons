<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_dunning_config" model="ir.ui.view">
        <field name="name">view_sale_order_dunning_config</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[div[field[@name='group_proforma_sales']]]" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="sending_validity_duration"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="sending_validity_duration"/>
                        <div class="text-muted">
                            Dunning are sent from orders' validity date minus this duration expressed in days.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>