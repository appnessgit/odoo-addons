<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.actions.server" id="ir_actions_compute_remaining_qties">
            <field name="name">Update quantities to deliver</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="code">
self.update_remaining_qties(cr,uid,context.get('active_ids'),context)
            </field>
        </record>

        <record model="ir.values" id="ir_value_compute_remaining_qties">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">sale.order</field>
            <field name="name">Update quantities to deliver</field>
            <field name="value" eval="'ir.actions.server,'+str(ir_actions_compute_remaining_qties)"/>
        </record>

        <record model="ir.actions.server" id="ir_actions_update_remaining_qty_lines">
            <field name="name">Update quantities to deliver</field>
            <field name="model_id" ref="sale.model_sale_order_line"/>
            <field name="code">
self.update_remaining_qty(cr,uid,context.get('active_ids'),context)
            </field>
        </record>

        <record model="ir.values" id="ir_value_update_remaining_qty_lines">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">sale.order.line</field>
            <field name="name">Update quantities to deliver</field>
            <field name="value" eval="'ir.actions.server,'+str(ir_actions_update_remaining_qty_lines)"/>
        </record>

        <record model="ir.ui.view" id="sale_order_line_tree">
            <field name="name">sale_order_line_tree</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale_backlog.sale_order_line_tree"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="product_uom_qty" position="after">
                    <field name="sent_qty" readonly="1" sum="Somme des quantités déjà expédiées"/>
                    <field name="remaining_qty" readonly="1" sum="Somme des R.A.E"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_encapsuled_tree_view">
            <field name="name">sale_order_line_encapsuled_tree_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
                    <field name="sent_qty"/>
                    <field name="remaining_qty"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_sale_expedition_by_order_line_form_view">
            <field name="name">sale_order_sale_expedition_by_order_line_form_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//field[@name='order_line']/form//field[@name='product_uom_qty']" position="after">
                    <field name="sent_qty"/>
                    <field name="remaining_qty"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_view_form">
            <field name="name">sale_order_view_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="order_line" position="before">
                    <field name="lines_display" invisible="1"/>
                    <button name="toggle_lines_display" type="object" string="Show All Lines"
                            attrs="{'invisible': [('lines_display', '=', 'all')]}" class="oe_right"/>
                    <button name="toggle_lines_display" type="object" string="Hide Delivered Lines"
                            attrs="{'invisible': [('lines_display', '=', 'not_null_remaining_quantity')]}" class="oe_right"/>
                </field>
                <field name="order_line" position="attributes">
                    <attribute name="attrs">{'invisible': [('lines_display', '!=', 'all')]}</attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>