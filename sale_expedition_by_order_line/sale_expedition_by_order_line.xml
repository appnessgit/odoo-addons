<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="sale_order_line_encapsuled_tree_view">
            <field name="name">sale_order_line_encapsuled_tree_view</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
                    <field name="sent_qty"/>
                    <field name="remaining_qty"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_encapsuled_form_view">
            <field name="name">sale_order_line_encapsuled_form_view</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/field[@name='field']/form//field[@name='product_uom_qty']" position="after">
                    <field name="sent_qty"/>
                    <field name="remaining_qty"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_view_form">
            <field name="name">sale_order_view_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="order_line" position="before">
                    <field name="lines_display" invisible="1"/>
                    <button name="toggle_lines_display" type="object" string="Show All Lines"
                            attrs="{'invisible': [('lines_display', '=', 'all')]}" class="oe_right"/>
                    <button name="toggle_lines_display" type="object" string="Hide Delivered Lines"
                            attrs="{'invisible': [('lines_display', '=', 'rae_non_nul')]}" class="oe_right"/>
                </field>
                <field name="order_line" position="attributes">
                    <attribute name="attrs">{'invisible': [('lines_display', '!=', 'all')]}</attribute>
                </field>
                <field name="order_line" position="after">
                    <field name="order_line_rae_non_nul" attrs="{'invisible': [('lines_display', '!=', 'rae_non_nul')]}"
                    context="{'tree_view_ref': 'sale_extract_encapsuled_lines_views.sale_order_line_encapsuled_tree_view', 'form_view_ref': 'sale_extract_encapsuled_lines_views.sale_order_line_encapsuled_form_view'}"/>
                </field>
            </field>
        </record>

    </data>
</openerp>