<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="bus_configuration_export_histo_tree">
            <field name="name">bus_configuration_export_histo_tree</field>
            <field name="model">bus.configuration.export.histo</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="bus_configuration_export_id"/>
                    <field name="serial_id"/>
                    <field name="treatment"/>
                    <field name="model"/>
                    <field name="export_ids"/>
                    <field name="last_job_state"/>
                    <field name="transfer_state"/>
                </tree>
            </field>
        </record>

        <record id="bus_configuration_export_histo_form" model="ir.ui.view">
            <field name="name">bus_configuration_export_histo_form</field>
            <field name="model">bus.configuration.export.histo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <header>
                            <field name="transfer_state" widget="statusbar"/>
                        </header>
                        <group>
                            <group>
                                <field name="bus_configuration_export_id"/>
                                <field name="serial_id"/>
                                <field name="last_job_state" widget="statusbar"/>
                            </group>
                            <group>
                                <field name="treatment"/>
                                <field name="model"/>
                                <field name="export_ids"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Logs" id="batch_histo_log">
                                <field name="log_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_bus_configuration_export_histo">
            <field name="name">Synchronized Historique</field>
            <field name="res_model">bus.configuration.export.histo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help"/>
        </record>

        <menuitem id="menu_bus_configuration_export_histo" name="Synchronized Histo"
                  action="act_window_bus_configuration_export_histo" parent="menu_bus"
                  sequence="100"/>

        <record model="ir.ui.view" id="bus_configuration_export_histo_log_tree">
            <field name="name">bus_configuration_export_histo_log_tree</field>
            <field name="model">bus.configuration.export.histo.log</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="histo_id"/>
                    <field name="serial_id"/>
                    <field name="job_uuid"/>
                    <field name="message_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="bus_configuration_export_histo_log_form">
            <field name="name">bus_configuration_export_histo_log_form</field>
            <field name="model">bus.configuration.export.histo.log</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="histo_id"/>
                                <field name="serial_id"/>
                            </group>
                            <group>
                                <field name="job_uuid"/>
                                <field name="message_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_bus_configuration_export_histo_log">
            <field name="name">Synchronized logs</field>
            <field name="res_model">bus.configuration.export.histo.log</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help"/>
        </record>
        <menuitem id="menu_bus_model_extend_log" name="Synchronized Log"
                  action="act_window_bus_configuration_export_histo_log" parent="menu_bus"
                  sequence="100"/>

    </data>
</openerp>