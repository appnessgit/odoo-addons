<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="account_move_form">
            <field name="name">account_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Historique">
                        <group>
                            <field name="create_date"/>
                            <field name="create_uid"/>
                            <field name="validation_date"/>
                            <field name="validation_uid"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="account_move_search">
            <field name="name">account_move_search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <group expand="0" position="inside">
                    <filter string="Créateur" domain="[]" context="{'group_by':'create_uid'}"/>
                    <filter string="Valideur" domain="[]" context="{'group_by':'validation_uid'}"/>
                    <filter string="Année de création" domain="[]" context="{'group_by':'create_date:year'}"/>
                    <filter string="Mois de création" domain="[]" context="{'group_by':'create_date:month'}"/>
                    <filter string="Jour de création" domain="[]" context="{'group_by':'create_date:day'}"/>
                    <filter string="Heure de création" domain="[]" context="{'group_by':'create_date:hour'}"/>
                    <filter string="Minute de création" domain="[]" context="{'group_by':'create_date:minute'}"/>
                    <filter string="Année de validation" domain="[]" context="{'group_by':'validation_date:year'}"/>
                    <filter string="Mois de validation" domain="[]" context="{'group_by':'validation_date:month'}"/>
                    <filter string="Jour de validation" domain="[]" context="{'group_by':'validation_date:day'}"/>
                    <filter string="Heure de validation" domain="[]" context="{'group_by':'validation_date:hour'}"/>
                    <filter string="Minute de validation" domain="[]" context="{'group_by':'validation_date:minute'}"/>
                </group>
            </field>
        </record>

    </data>
</openerp>