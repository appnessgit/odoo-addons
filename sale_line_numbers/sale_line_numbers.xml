<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="sale_order_line_encapsuled_tree_view">
            <field name="name">sale_order_line_encapsuled_tree_view</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/field[@name='field']/tree//field[@name='product_id']" position="before">
                    <field name="line_no"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_encapsuled_form_view">
            <field name="name">sale_order_line_encapsuled_form_view</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/field[@name='field']/form//field[@name='product_id']" position="before">
                    <field name="line_no"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>